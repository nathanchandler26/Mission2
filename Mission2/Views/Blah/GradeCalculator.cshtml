@{
    ViewData["Title"] = "Mission 3";
}

@model GradeCalculatorModel;

<h2>Grade Calculator</h2>
<p>Enter your percentage score for each category without a percentage or decimal. For example, 40% or .4 would be entered as "40".</p>
<form method="post">
    <label>Assignments</label>
    <input id="pctAssignments" asp-for="Assignments"/><br />
    <label>Group Project</label>
    <input id="pctGroupProject" asp-for="GroupProject"/><br />
    <label>Quizzes</label>
    <input id="pctQuizzes" asp-for="Quizzes"/><br />
    <label>Exams</label>
    <input id="pctExams" asp-for="Exams"/><br />
    <label>INTEX</label>
    <input id="pctINTEX" asp-for="INTEX"/><br />
    <button type="submit" onclick="addNumbers()">Calculate</button>
    <input id="btnCalculate" type="button" value="Calculate" onclick="addNumbers()" />
    <!-- This above line will add up the percentages when the button is clicked using the js function created.-->

    <div asp-validation-summary="All"></div>
</form>

<script src="js/GradeCalculator.js"></script>